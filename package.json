  "type": "module",
  "workspaces": [
    "docs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pocketgamecorp/pockit-ai-core.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
